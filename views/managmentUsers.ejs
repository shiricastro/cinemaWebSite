<%-include("partials/header", {title:'Users Managment'}) %>
<%-include("partials/menu", {active:baseUrl,admin:admin}) %>
<h2>Users</h2>
<%-include("partials/menuUserManagment", {active:path}) %>
<br>
<ul class="listT1">
    <% users.forEach(user => {%>
        <li class="itemT1">
            Name: <%=user.name%><br>
            User Name: <%=user.username%><br>
            Session Time Out (Minuts): <%=user.sessionTimeOut%><br>
            Created Date: <%=user.created%><br>
            Permmisions: <%=user.permissions%><br>
            <br>
            <ul class="nav_list left">
                <li><a href="/users/updateUser/<%=user.id%>" class="nav_link">Edit</a></li>
                <li><button onclick="deleteUser('<%=user.id%>');" class="nav_link">Delete</button></li>
            </ul>

        </li>    
    <%});%>
    
</ul>
<script>
    function deleteUser(id){
        const xhttp = new XMLHttpRequest();
        xhttp.open('POST', "http://localhost:3000/users/deleteUser/" + id,true);
        xhttp.send();
        window.location.assign('/users/managmentUsers')
    }
</script>
<%-include("partials/footer", {}) %>